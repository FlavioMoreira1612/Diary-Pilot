@{
    Layout = null; // Remove o layout padrão do ASP.NET Core MVC
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/HomePage.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>

<body>
    <div class="app-container">
        <div class="wrapper">
            <aside class="sidebar">
                <div class="logo">
                    <img src="/img/logoDP.jpg" />
                    <h1 class="logo-text">DIARY PILOT</h1>
                </div>
                <nav class="menu">
                    <ul>
                        <li><a class="Vgeral" asp-controller="Home" asp-action="Index">Visão Geral</a></li>
                        <li><a class="MTarefa" asp-controller="Tarefas" asp-action="Index">Minhas Tarefas</a></li>
                        <li><a class="Categoria" asp-controller="Categorias" asp-action="Index">Categoria</a></li>
                        <li><a class="Config" asp-controller="Usuarios" asp-action="Config">Configurações</a></li>
                    </ul>
                </nav>
            </aside>

            <main class="content">
                <header class="header">
                    <div>
                        <h1>Gustavo</h1>
                        <p>Vamos terminar sua tarefa hoje!</p>
                    </div>
                    <div class="profile">
                        <button class="mic-button"></button>
                        <img src="img/perfil.png" alt="Foto de Perfil" class="profile-pic">
                    </div>
                </header>

                <nav class="task-status">
                    <a href="#">Aprovada</a>
                    <a href="#">Pendente</a>
                    <a href="#">Concluída</a>
                </nav>

                <section class="tasks-today">
                    <h2>Tarefas Pendentes de Hoje</h2>
                    <ul>
                        <li><input class="circle" type="radio"> Conferir entrega do cimento <span class="badge pending">Pendente</span></li>
                        <li><input class="circle" type="radio"> Reunião com engenheiro civil e arquiteto <span class="badge done">Concluído</span></li>
                        <li><input class="circle" type="radio"> Solicitar ligação provisória de água <span class="badge late">Atrasado</span></li>
                        <li><input class="circle" type="radio"> Interactive prototype project <span class="badge done">Concluído</span></li>
                    </ul>
                </section>

                <section class="summary">
                    <h2>Resumo da Obra - Bairro Santa Inês</h2>
                    <table>
                        <thead>
                            <tr>
                                <th>Tarefa</th>
                                <th>Responsável</th>
                                <th>Data limite</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Limpeza do terreno</td>
                                <td>Equipe A</td>
                                <td>02/12/2024</td>
                            </tr>
                        </tbody>
                    </table>
                </section>
            </main>
        </div>

        <aside class="right-sidebar">
            <div class="calendar">
                <h4>Março 2025</h4>
            </div>

            <div class="card">
                <h2>Tarefas Concluídas</h2>
                <p class="number">1</p>
                <p>Tarefas finalizadas com sucesso esta semana!</p>
            </div>

            <div class="card">
                <h2>Pendentes</h2>
                <p class="number">0</p>
                <p>Aguardando execução</p>
            </div>
        </aside>
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="auth">
            <p>Olá, @User.Identity.Name</p>
            <a asp-controller="Usuarios" asp-action="Logout">Sair</a>
        </div>
    }
    else
    {
        <div class="auth">
            <a asp-controller="Usuarios" asp-action="Login">Login</a>
        </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

